{
  "manifest_version": 2,
  "name": "ZenFox",
  "version": "1.0.3",
  "author": "https://github.com/CodeCadim",
  "description": "Firefox with a zen workflow.",
  "homepage_url": "https://github.com/CodeCadim/ZenFox",
  "icons": {
    "48": "logo.png"
  },
  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs",
    "search",
    "theme"
  ],
  "background": {
    "scripts": ["components/background.js"]
  },
  "browser_action": {
    "default_title": "ZenFox",
    "default_icon": {
      "48": "logo.png"
    }
  },
  "commands": {
    "open-sidebar": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Open Sidebar"
    }
  },
  "sidebar_action": {
    "default_panel": "components/sidebar/sidebar.html",
    "default_icon": {
      "48": "logo.png"
    }
  },
  "developer": {
    "name": "Brahim Hamdouni (CodeCadim)",
    "url": "https://github.com/CodeCadim"
  }
}
